@model IEnumerable<ApplyNureRulesApp.Models.Content>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Home/MasterView.cshtml";
}


<div class="container content" style="margin-top: 120px;">

    <button type="submit" class="btn main-btn pull-right">
            @Html.ActionLink("Додати правила", "Add", "Dashboard", new { Style = "color: #ffffff" })
    </button>
    <br /><br />

    <table class="table table-hover">
        <tr>
            <th>
                Заголовок
            </th>
            <th>
                Опис
            </th>
            <th>
                Категорiя
            </th>
            <th></th>
        </tr>



        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    <h4>
                        @Html.ActionLink("Редагувати", "Edit", new { id = item.Id })

                        @Html.ActionLink("Видалити", "Delete", new { id = item.Id })
                    </h4>

                </td>
            </tr>
        }

    </table>




</div>
