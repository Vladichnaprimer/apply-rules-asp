@model IEnumerable<ApplyNureRulesApp.Models.Term>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Home/MasterView.cshtml";
}



<div class="container content">
    <p>
        @Html.ActionLink("Create New", "Add")
    </p>
    <table class="table">
        <tr>
            <th>
                Термiн
            </th>
            <th>
                Визначення
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Term1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Definition)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
